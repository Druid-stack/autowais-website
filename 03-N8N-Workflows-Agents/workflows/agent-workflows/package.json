{
  "name": "yamaha-tf3-smaart9-audio-agent",
  "version": "1.0.0",
  "description": "Audio System Configuration Agent for Yamaha TF3 and Smaart 9 Integration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:tf3": "node tf3-usb-bridge.js",
    "start:smaart9": "node smaart9-bridge.js",
    "start:all": "concurrently \"npm run start:tf3\" \"npm run start:smaart9\"",
    "dev": "nodemon index.js",
    "test": "jest",
    "install:all": "npm install && npm run install:bridges",
    "install:bridges": "cd bridges && npm install"
  },
  "keywords": [
    "yamaha",
    "tf3",
    "smaart9",
    "audio",
    "system",
    "configuration",
    "agent",
    "n8n",
    "automation"
  ],
  "author": "Audio System Agent",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "serialport": "^12.0.0",
    "@serialport/parser-readline": "^12.0.0",
    "axios": "^1.6.0",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
