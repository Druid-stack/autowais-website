        "jsonBody": "={\n  \"customerEmail\": \"{{ $fromAI('customerEmail') }}\",\n  \"status\": [\"confirmed\", \"pending\"],\n  \"limit\": 10,\n  \"sort\": {\n    \"departureDate\": -1\n  }\n}",
